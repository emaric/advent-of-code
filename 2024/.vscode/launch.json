{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Script",
      "type": "debugpy",
      "request": "launch",
      "module": "run",
      "console": "integratedTerminal",
      "args": [
        "--file",
        "${relativeFile}"
      ],
      "env": {
        "PYTHONPATH": "${workspaceFolder},${workspaceFolder}/shared"
      }
    }
  ]
}